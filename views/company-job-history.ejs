<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Company Job History</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&family=Noto+Sans:wght@400;500;700" rel="stylesheet">
</head>
<body class="bg-white text-gray-900" style="font-family: 'Inter', 'Noto Sans', sans-serif;">

    <div class="flex h-screen border border-gray-300 rounded-lg shadow-lg overflow-hidden">
        <!-- Sidebar -->
        <aside class="w-72 bg-gray-100 shadow-md min-h-screen p-6 flex flex-col justify-between border-r border-gray-300">
            <div>
                <!-- ProConnect Logo -->
                <div class="flex items-center gap-4 text-black mb-8">
                    <div class="w-6 h-6 text-black">
                        <svg viewBox="0 0 48 48" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" clip-rule="evenodd" d="M24 4H6V17.3333V30.6667H24V44H42V30.6667V17.3333H24V4Z"></path>
                        </svg>
                    </div>
                    <h2 class="text-black text-xl font-bold">ProConnect</h2>
                </div>

                <h2 class="text-lg font-bold text-gray-800 mb-6">Company Dashboard</h2>
                
                <nav class="space-y-4">
                    <a href="/company-home" class="block text-gray-700 font-medium flex items-center gap-2 hover:text-black">üè† Home</a>
                    <a href="/company-jobs" class="block text-gray-700 font-medium flex items-center gap-2 hover:text-black">üìå Jobs</a>
                    <a href="/company-pending-payments" class="block text-gray-700 font-medium flex items-center gap-2 hover:text-black">üí≥ Pending Payments</a>
                    <a href="/company-job-history" class="block text-gray-700 font-medium flex items-center gap-2 hover:text-black">üìú Job History</a>
                </nav>
            </div>

            <a href="/logout" class="block text-red-500 font-medium mt-auto flex items-center gap-2 hover:text-red-600">üö™ Logout</a>
        </aside>

        <!-- Main Content -->
        <main class="flex-1 p-8 bg-gray-50">
            <header class="border-b border-gray-300 pb-4">
                <h2 class="text-2xl font-bold text-gray-900">Job History</h2>
            </header>

            <!-- Job History Table -->
            <section class="mt-6">
                <div class="bg-white p-6 rounded-lg shadow-lg border border-gray-200">
                    <h3 class="text-lg font-semibold mb-4 text-gray-900">Completed Jobs</h3>

                    <div class="overflow-auto max-h-96 border border-gray-300 rounded-md">
                        <table class="w-full border-collapse text-sm">
                            <thead class="bg-gray-100 sticky top-0 shadow-md">
                                <tr class="text-left">
                                    <th class="py-3 px-4 border-b">Job Title</th>
                                    <th class="py-3 px-4 border-b">Description</th>
                                    <th class="py-3 px-4 border-b">Professional</th>
                                </tr>
                            </thead>
                            <tbody class="text-gray-700">
                                <% if (completedJobs.length > 0) { %>
                                    <% completedJobs.forEach(job => { %>
                                        <tr class="border-b">
                                            <td class="py-3 px-4"><%= job.title %></td>
                                            <td class="py-3 px-4"><%= job.description %></td>
                                            <td class="py-3 px-4"><%= job.professional %></td>
                                        </tr>
                                    <% }); %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="4" class="text-center py-4 text-gray-500">No completed jobs found.</td>
                                    </tr>
                                <% } %>
                            </tbody>
                              
                        </table>
                    </div>
                </div>
            </section>
        </main>
    </div>

</body>
</html>
